extends ../layout

block content
    div(class='flex flex-col items-center justify-center w-full h-full gap-8 p-8 animate-reveal-page')
        h1(class='text-3xl font-bold') Delete #{seller.name} ?
        if errors
            ul
                each error in errors
                    li(class='text-red-500')= error.msg
        form(action="" method="post" class='flex flex-col items-center justify-center gap-4')
            input(type="password" name="adminpass" required placeholder="Admin Password" class="block mt-1 transition-all bg-gray-200 border-transparent rounded-md focus:border-gray-500 focus:bg-white focus:ring-0 w-[25em] hover:bg-gray-300")
            div(class='flex items-center justify-center gap-4')
                a(href=seller.url class='px-4 py-2 font-bold text-white transition-all bg-blue-500 rounded-md cursor-pointer hover:bg-blue-600') Back
                input(type="submit" value="Confirm" class='px-4 py-2 font-bold text-white transition-all bg-red-500 rounded-md cursor-pointer hover:bg-red-600')
