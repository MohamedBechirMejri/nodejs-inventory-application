extends ../layout

block content
    div(class='w-full h-full grid grid-rows-1 grid-cols-10 gap-4 p-4')
        div(class='flex flex-col justify-start items-center w-full h-full [grid-area:1/1/2/3]')
            div(class='flex flex-col justify-center items-center')
                img(src='https://' + seller.image.replace('http://', '').replace('https://', ''), alt="seller")
                h1(class='font-bold')= seller.name
            div(class='flex flex-col justify-center items-center')
                p= seller.email
                p= seller.phone

        div(class='flex flex-col justify-start items-center w-full h-full [grid-area:1/3/2/11]')
            if items.length > 0
                h2(class='text-4xl font-bold') Items
                ul(class='pl-12 p-8 pt-12 w-full h-full flex justify-start items-start gap-12 flex-wrap overflow-y-scroll')
                    each item in items
                        a(href=item.url class='flex flex-col items-center justify-center border rounded-lg overflow-hidden pb-2 scale-125 bg-white hover:shadow transition-all')
                            img(src=item.image, alt="item")
                            p(class='')= item.name
                            p(class='font-bold')= item.price + '$'
            else
                h1 No Items
                p= "This seller has no items."
