extends ../layout

block content

    form(action='' method='post')
        if errors
            ul
                each error in errors
                    li= error.msg
        h1 Create Seller
        input(type='text' name='name' required placeholder='Name' value=seller.name)
        input(type="email" name="email" required placeholder="Email" value=seller.email)
        input(type='tel' name='phone' required placeholder='Phone' value=seller.phone)
        input(type='text' name='image' required placeholder='Image Url' value=seller.image)
        input(type='submit' value='Create')
