doctype html
html
  head
    title= title
    link(rel='stylesheet' href='/stylesheets/style.css')
  body(class='w-screen h-screen grid grid-cols-1 grid-rows-[repeat(11,minmax(0,1fr))] font-serif overflow-hidden')
    header(class='bg-gray-900 text-white text-center flex justify-between items-center h-full p-4 [grid-area:1/1/1/2]')
      h1(class='font-bold')
        a(href="/")  B Store
      nav(class='font-semibold flex justify-center items-center gap-4')
        a(href='/items') Items
        a(href='/categories') Categories
        a(href='/sellers') Sellers
      div(class='font-semibold flex justify-center items-center gap-4')
        a(href='#') Sign up
        a(href='#') Login
    main(class='[grid-area:2/1/12/2]')
      block content
