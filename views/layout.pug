doctype html
html
  head
    title= title
    link(rel='stylesheet' href='/stylesheets/style.css')
  body(class='w-screen h-screen grid grid-cols-1 grid-rows-[repeat(11,minmax(0,1fr))] font-serif overflow-hidden')
    header(class='bg-gray-900 text-white text-center flex justify-between items-center h-full p-4 [grid-area:1/1/1/2]')
      h1(class='font-bold')
        a.animated-underline(href="/")  B Store
      nav(class='flex items-center justify-center gap-4 font-semibold')
        a.animated-underline(href='/items') Items
        a.animated-underline(href='/categories') Categories
        a.animated-underline(href='/sellers') Sellers
      div(class='flex items-center justify-center gap-4 font-semibold')
        a.animated-underline(href='/create') Create
    main(class='[grid-area:2/1/12/2]')
      block content
