extends ../layout

block content
    div(class='grid w-full h-full grid-cols-10 grid-rows-1 gap-4 p-4 animate-reveal-page')
        div(class='flex flex-col justify-start items-center w-full h-full [grid-area:1/1/2/3] gap-4')
            div(class='flex flex-col items-center justify-center pt-8')
                h1(class='text-4xl font-bold')= category.name
            div(class='flex items-center justify-center gap-4')
                a(href=category.url + "/edit" class='p-2 px-4 text-white transition-all bg-green-500 border rounded-lg hover:bg-green-600')
                    | Edit
                a(href=category.url + "/delete" class='p-2 px-4 text-white transition-all bg-red-500 border rounded-lg hover:bg-red-600')
                    | Delete


        div(class='flex flex-col justify-start items-center w-full h-full [grid-area:1/3/2/11]')
            if items.length > 0
                h2(class='text-4xl font-bold') Items
                ul(class='flex flex-wrap items-start justify-start w-full h-full gap-12 p-8 pt-12 pl-12 overflow-y-scroll')
                    each item in items
                        a(href=item.url class='flex flex-col items-center justify-center pb-2 overflow-hidden transition-all scale-125 bg-white border rounded-lg hover:shadow')
                            img.w-28.h-28(src=item.image, alt="item")
                            p(class='')= item.name
                            p(class='font-bold')= item.price + '$'
            else
                h1 No Items
                p= "This category has no items."
